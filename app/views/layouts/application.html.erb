<!DOCTYPE html>
<html>
  <head>
    <title>Beatter</title>
    <%# <meta name="viewport" content="width=device-width,initial-scale=1"> %>
    <%# <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script> %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <% if  request.user_agent.include?("Android") %>
      <meta name="viewport" content="width=320, initial-scale=0.2, maximum-scale=1, user-scalable=no">
    <% end %>

    <%= favicon_link_tag asset_path('favicon.ico') %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <%# <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script> %>

  </head>
  <body onunload="">

    <%= render "layouts/navbar/user" %>

    <div class="container w-standard">
    
      <%= yield %>

      <% if flash.any? %>
        <script type="text/javascript">
          <% flash.each do |key, value| %>
            <% type = key.to_s.gsub('alert', 'error').gsub('notice', 'success') %>
            toastr.<%= type %>('<%= value %>','Aviso')
          <% end %>
        </script>
      <% end %>

    </div>
    <%# <script type="text/javascript">
        alert('First load / reload');
        window.onload = function(){alert('JS onload')};
    </script> %>
  </body>
</html>
