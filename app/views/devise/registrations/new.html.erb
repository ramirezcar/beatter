<div class="vertical-center d-flex justify-content-center align-items-center h-center">
  <div class="w-75 rounded-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="p-3">
        <div class="form text-center mb-3 p-3">
          <h2>Unirse a Beatter</h2>
        </div>

        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="row mb-4">
          <div class="col-8">
            <div class="mb-3">
              <%= f.label :aka, class: 'form-label' %>
              <%= f.text_field :aka, class: 'form-control' %>
            </div>       
            <div class="mb-3">
              <%= f.label :avatar, class: 'form-label' %>
              <%= f.file_field :avatar, accept: 'image/jpeg', class: 'form-control' %>
            </div>
            
          </div>
          <div class="col-4">
            <% if @user.avatar? %>
              <%= image_tag(@user.avatar, class: "rounded-3 img-thumbnail") %>
            <% else %>
              <%= image_tag "default-avatar.png", :loading => "lazy", class:"rounded-1 img-thumbnail" %>
            <% end %>
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="mb-5">
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          <% if @minimum_password_length %>
            <span class="badge bg-success mt-2"><%= @minimum_password_length %> carácteres como mínimo</span>
          <% end %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, class: 'form-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>
        
        <div class="mb-3">
          <%= f.label :desc, class: 'form-label' %>
          <%= f.text_area :desc, class: 'form-control' %>
        </div>

        <span class="text-muted">Ya tienes una cuenta? </span>
        <%= render "devise/shared/links" %>

        <div class="actions d-flex justify-content-center pt-4">
          <%= f.submit "Unirme", class: 'btn btn-primary p-3 col-4' %>
        </div>
      </div>
    <% end %>
  </div>
</div>