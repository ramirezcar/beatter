<div class="vertical-center d-flex justify-content-center align-items-center h-center">
  <div class="rounded-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
      <div class="p-3">
        <div class="form col text-center p-3">
          <h3>Editar Perfil</h3>
        </div>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="row mb-4">
          <div class="col-8">
            <div class="mb-3">
              <%= form.label :aka, class: 'form-label' %>
              <%= form.text_field :aka, class: 'form-control', autocomplete: 'off' %>
            </div>
            <div class="mb-3">
              <%= form.label :desc, class: 'form-label' %>
              <%= form.text_area :desc, class: 'form-control' %>
            </div>
            <div class="mb-3">
              <%= form.label :avatar, class: 'form-label' %>
              <%= form.file_field :avatar, accept: 'image/jpeg', class: 'form-control' %>
            </div>
          </div>
          <div class="col-4">
            <% if @user.avatar.persisted? %>
              <%= image_tag @user.avatar.variant(resize_to_fill: [500, 500, gravity: 'north']), class: "w-100 rounded-3" %>
            <% else %>
              <%= image_tag "default-avatar.png", :loading => "lazy", class:"rounded-1 img-thumbnail" %>
            <% end %>
          </div>
        </div>
        
        <div class="mb-4">
          <%= form.label :email, class: 'form-label' %>
          <%= form.email_field :email, class: 'form-control'%>
        </div>
        
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

      <div class="row">
        <div class="col mb-2">
          <%= form.label :password, "Nueva contraseña", class: 'form-label' %>
          <%= form.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          <% if @minimum_password_length %>
            <span class="badge bg-success mt-2"><%= @minimum_password_length %> carácteres como mínimo</span>
          <% end %>
        </div>

        <div class="col mb-5">
          <%= form.label :password_confirmation, class: 'form-label' %>
          <%= form.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>
      </div>

        <div class="col mb-3">
          <%= form.label :current_password, class: 'form-label' %> <i>(confirmar cambios)</i><br />
          <%= form.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
        </div>

        <div class="actions d-flex justify-content-center pt-4">
          <%= form.submit t('global.forms.submit'), class: 'btn btn-primary p-3 col-2' %>
        </div>
      </div>
    <% end %>
  </div>
</div>